<html lang="en">
    <head>
        <title>gamePLUS</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const ctx = document.getElementById('myChart');

                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: <%- xLabels %>,
                        datasets: [{
                            label: 'Games',
                            data: <%- yLabels %>,
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                ticks: {
                                    stepSize: 1
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                        },
                        responsive: true,
                        maintainAspectRatio: false
                    }
                });
            })
        </script>
    </head>
    <body>
        <h1><img src="/logo.png" alt="gamePLUS"></h1>
        <p>gamePLUS is the game detection database for Quarky, the world's silliest chat app.</p>

        <div style="width: 25em; height: 10em;"><canvas id="myChart"></canvas></div>

        <form action="/search" method="get">
            <input id="gamename" name="game" placeholder="Type a game name...">
            <input type="submit" value="Search">
        </form>

        <hr>

        <h2 style="margin-bottom: 0;">Latest games</h2>
        <% for (let game of newestGames) { %>
            <a href="/game/<%= game._id %>" class="game"><img src="/game/<%= game._id %>/icon" alt="<%= game.name %>" title="<%= game.name %>" width="48" height="48"></a>
        <% } %>
        <% if (!isAdmin) { %>
            <p><a href="#" style="font-size: 0.7em" onclick="document.cookie = `admin=${prompt('Please enter the password')}`;document.location.reload()">Admin-only app management</a></p>
        <% } else { %>
            <p><a href="/create">Create new app</a></p>
        <% } %>
    </body>
</html>
